<div class="col">
  <div class="card mb-4" style="max-width: 40rem;">
    <img class="card-img-top" src="<%= url_for article.optimized_article_image(article.thumbnail, 600, 300) %>" alt="Article Image Card" />
    <div class="card-body">
      <h5 class="card-title">
        <%= link_to article.title, article %>
      </h5>
      <p class="card-text">
        <%= article.body.to_plain_text.truncate_words(25) %>
      </p>
      <p class="card-text">
        <small class="text-muted">
          <%= article.updated_at.strftime("%A, %B %e, %Y") %>|
          <%= pluralize(article.views, "View") %> |
          <% if current_user&.admin %>
            <%= link_to "Delete", article, method: :delete %>
          <% end %>
        </small>
      </p>
    </div>
  </div>
</div>
<div style="width:100%; height: 300px; overflow-y:hidden">
  <%= image_tag(@article.banner, style:'width:100%') %>
</div>
<div class="container" style="margin-top: 2em">
  <div class="row">
    <div class="jumbotron" style="width:100%">
      <h1 class="display-4">
        <%= link_to @article.title, article_path(article: @article), method: :get %>
      </h1>
      <p class="lead">
        <%= @article.updated_at.strftime("%A, %B %e, %Y") %> | <%= pluralize(@article.views, "View") %>
      </p>
      <hr class="my-4" />
      <div class="post_body">
        <%= @article.body %>
      </div>
    </div>
  </div>
</div>

<% if is_admin! %>
  <%= link_to 'Edit', edit_article_path(@article) %> |
  <%= link_to 'Back', articles_path %>
<% end %>
<div style="width:100%; height: 300px; overflow-y:hidden">
  <%= image_tag(@movie.banner, style:'width:100%') %>
</div>
<div class="container" style="margin-top: 2em">
  <div class="row">
    <div class="jumbotron" style="width:100%">
      <h1 class="display-4">
        <%= link_to @movie.title, root_path %>
      </h1>
      <p class="lead">
        <%= @movie.updated_at.strftime("%A, %B %e, %Y") %> | <%= pluralize(@movie.views, "View") %> |
        <%= pluralize(@num_comments, "Comment") %> |
        <% if current_user&.admin%>
          <%= link_to "Delete", @movie, method: :delete %>
        <% end %>
      </p>
      <hr class="my-4" />
      <div class="movie_body">
        <%= @movie.description %>
      </div>
    </div>
  </div>
</div>

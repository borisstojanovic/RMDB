
<%= form_with model: movie do |f| %>

  <div class="form-inputs">
    <%= f.text_field :title, class:'form-control string' %>
    <%= f.date_select :release_date, class:'form-control date' %>
    <%= f.label :thumbnail, class:'form-control' %>
    <%= f.file_field :thumbnail %>
    <%= f.label :banner, class:'form-control' %>
    <%= f.file_field :banner %>
    <%= f.rich_text_area :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

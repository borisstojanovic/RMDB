<h4>Search</h4>
    <%= form_tag(movies_path, method: :get) do %>
        <%= text_field_tag(:search, params[:search]) %>
        <%= submit_tag("Search") %>
    <% end %>
<br>
<h1>Movies</h1>

<div class="container-fluid">
  <div class="row">
    <div class="digg_pagination">
      <%= will_paginate(@movies, :container => false) %>
    </div>
  </div>

  <div>
    <% @movies.each_slice(4) do |movies| %>
    <div class="row">
      <% movies.each do |movie|%>
      <div class="col">
        <div class="card mb-4" style="max-width: 24rem;">
          <img class="card-img-top" src="<%= url_for movie.optimized_image(movie.thumbnail, 300, 150) %>" alt="Movie Image Card" />
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to movie.title, movie %>
            </h5>
            <p class="card-text">
              <%= movie.description.to_plain_text.truncate_words(25) %>
            </p>
            <p class="card-text">
              <small class="text-muted">
                <%= movie.release_date.strftime("%A, %B %e, %Y") %>|
                <%= pluralize(movie.views, "View") %> |
                <% if current_user&.admin %>
                  <%= link_to "Delete", movie, method: :delete %>
                  <%else if current_user %>
                    <% if !is_favorite(movie) %>
                      <%= link_to "Favorite",  favorite_path(movie: movie.id, type: "favorite"), method: :put %>
                    <% else %>
                      <%= link_to "Unfavorite", favorite_path(movie: movie.id, type: "unfavorite"), method: :put %>
                    <% end %>
                  <% end %>
                <% end %>
              </small>
            </p>
          </div>
        </div>
      </div>
      <%end %>
    </div>
    <% end %>
  </div>
</div>
